<h1><%= heading_my_or_all %></h1>

<% if current_user && current_user.knkf_member? %>
  <%= link_to t('new_meeting'), new_meeting_path, class: "btn btn-link" %>
<% end %>

<table class="table table-striped table-bordered", id="lista_spotkan">

  <thead>
  <tr>

    <th><%= t("name") %></th>
    <th><%= t("date") %></th>
    <th><%= t("link") %></th>
    <th><%= t("take_part") %></th>
    <th><%= t("edit_destroy") %></th>


  </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.date %></td>
        <td><%= link_to t("meeting_link") + "#{meeting.id}", meeting, class: "btn btn-link" %></td>
        <td><%= relation_to_meeting(meeting) %></td>
        <td><%= destroy_meeting_if_can(meeting) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('main_page'), home_index_path, class: "btn btn-link" %>