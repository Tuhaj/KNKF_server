<h1>Spotkanie <%= @meeting.name %></h1>
<table class="table">
  <tr><td>Opis:</td></tr>
  <tr><td><%= @meeting.description %></td></tr>
  <tr><td>Data: <%= @meeting.date %></td></tr>
    <% if @meeting.reading %>
      <tr><td>Lektura: <%= @meeting.reading.author %> : <%=  @meeting.reading.title  %></td></tr>
    <% else %>
      </br>
      <tr><td> Lektura nie została jeszcze ustalona </td></tr>
      <% if current_user.referee %>
        <tr><td><%= link_to 'Zakończ głosowanie - zaloguj się jako administrator', new_admin_session_path, class: "btn", :method =>:get %></td></tr>
      <% end %>
    <% end %>
</table>

<h4>Zapisane osoby</h4>
  <table class="table table-striped table-bordered">
    <thead>
  <tr>

    <th>Uczestnik</th>
    <th>Stopień</th>
    <th>Koło</th>
    <th>Wypisz się</th>
  </tr>
  </thead>
  <% @meeting.users.each do |a| %>
      <tr>
        <td><%= a.full_name %></td>
        <td><%= a.degree %></td>
        <% if a.knkf_member? %>
          <td>KNKF</td>
          <% else %>
          <td>gość</td>
        <% end %>
        <% if a == current_user %>
               <td> <%= link_to 'wypisz się', meeting_remove_me_path(@meeting), class: "btn btn-link", :method =>:delete %> </td>
          <% else %>
          <td></td>
        <% end %>

      </tr>
  


  <% end %>
  </table>
  

<%= link_to 'Spotkania', meetings_path, class: "btn btn-link" %>


