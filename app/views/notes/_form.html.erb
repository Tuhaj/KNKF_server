 <%= form_for @note, url: {action: "create"} do |f| %>

  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> <%= "note errors" %></h2>
      <ul>
        <% @note.errors.full_notes.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p> <%= "note title" %> <%= f.text_field :title, class: "form-control-static" %> </p>
  <p><%= "note text" %> <%= f.text_area :content, class: "form-control-static", size: "40x10"%> </p>
  <%= f.hidden_field :reading_id, value: params[:reading_id], class: "form-control-static" %>
  <%= f.submit "add note to evernote", class: "btn btn-link" %>
<% end %>